import {CartButtonCounted, Aicon} from '../components/AddToCart'

const { title='Ironshop', back=true, cart=false} = Astro.props;    
---
<!DOCTYPE html>
  <html lang="en-US" class='dark'>
  <head>
  <meta charset="UTF-8" />
  <meta name="description" content="Free curriculum">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Iron Shop</title>
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content='black'>
  <link rel="apple-touch-icon" href="/logo_no_text.png"/>
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
 
  </head>
  <body class='dark:bg-black dark:text-white' >
  <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class='navbar-left'>
  {back &&  <button  onclick='history.back()' >
  <Icon class="h-6 w-6 text-blue-600 hover:text-blue-400 mx-2" path={chevronLeft}/></button>
}
  {!back && <a href='https://datagrove.com' class="" aria-label="logo" >
    <Icon path={chartBar} class='h-6 w-6 text-blue-600 hover:text-blue-400 mx-2'/>
  </a>
}
  </div>
  <div class="navbar-brand">
  <a class="navbar-item" href="/index.html">
  ðŸ’ª Iron Shop
  </a>
  </div>
  <div class="navbar-right">
    <Show when={cart}>
      <Aicon  href='/cart' path={printer }/>
    </Show>
    <Show when={!cart}>
      <Aicon href='/search' path={magnifyingGlass}/>
      <CartButtonCounted client:load/>
    </Show>
  </div>

  </nav>
    <div >
