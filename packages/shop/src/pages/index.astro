---
import Page from "../layouts/Page.astro";
import Card from "../components/Card.astro";
import Welcome from "../components/Welcome.md";
import Warning from "../components/Warning.md";
import folders from "../config/folder.json";
---

<Page title="Iron shop" back={false}>
	<Welcome />
	<div class="mt-8 flex flex-wrap">
		{
			folders.map((e) => (
				 <Card
					title={e.name}
					href={"/category/"+e.name}
					src={"/"+e.name.toLowerCase() + ".jpeg"}
				/>
			))
		}
	</div>

	<Warning />
</Page>

<style>
	.container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(106px, 1fr));
	}
</style>
