---
import Page from '../layouts/Page.astro';
import Card from '../components/Card.astro';
import Welcome from '../components/Welcome.md'
import Warning from '../components/Warning.md'
import folders from '../../public/folder.json'
---

<Page title="Welcome to Astro." back={false}  >
	<Welcome  />	
		<div class='mt-8 flex flex-wrap'>
		{
			folders.map((e)=><Card title={e.name}  
				href='#'
				src={e.name.toLowerCase()+".jpeg"} ></Card>)
		}</div>	
		
	
		


<Warning />
	
</Page>

<style>
.container {

  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(106px, 1fr));
}

</style>
